	xmlns:html="http://www.w3.org/1999/xhtml">
	<ResponsivePopover
    title="{i18n>MODULES_OFFERED}"
    class="sapUiPopupWithPadding"
    placement="Right" >
    <beginButton>
      <Button text="{i18n>MSG_OK}" width="100%" press="handleCloseButton" />
